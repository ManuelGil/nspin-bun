{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"noEmit": false,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
